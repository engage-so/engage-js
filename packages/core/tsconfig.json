{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
